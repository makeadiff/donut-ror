<h1>Listing Volunteers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone no</th>
      <th colspan="3" class="align-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.name %></td>
        <td><%= volunteer.phone_no %></td>
        <td><%= link_to 'Details', volunteer %></td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Delete', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<div class="link-button clearfix"><%= link_to 'Create New Volunteer', new_volunteer_path %></div>


