
<%= form_for(@city) do |f| %>
  <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% @city.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="grid4">
        <%= f.label :city, :class => 'col2' %>
        <%= f.text_field :name, :class => 'col6', :id => "regionText", :maxlength => 30 %>
      </div>
    </div> 
    <div class="row">
      <div class="grid4">
      	<%= f.label "Region", :class => 'col2'%>
    	  <div class="col6">
          <%= collection_select(:city, :state_id, State.all.order(:name), :id, :name, {:prompt => true}) %>	
        </div>
      </div>
    </div>
  <div class="actions">
    <%= f.submit "Create City", :id => 'region-button'%>
  </div>
<% end %>
