
<html>
  <head>
    <title>Make a Difference</title>
    <link href="/assets/login.css" media="screen" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script type="text/javascript">
  	jQuery(document).ready(function() {
    jQuery("#phoneNo").keydown(function(event) {
    	// Allow only backspace and delete
    	if ( event.keyCode == 46 || event.keyCode == 9 || event.keyCode == 8 || (event.keyCode >= 35 && event.keyCode <= 39) ||
    	(event.keyCode == 65 && event.ctrlKey == true) ||
    	(event.keyCode == 67 && event.ctrlKey == true) ||
    	(event.keyCode == 86 && event.ctrlKey == true) ||
    	(event.keyCode == 88 && event.ctrlKey == true) ) {
    		// let it happen, don't do anything
    	}
    	else {
    		// Ensure that it is a number and stop the keypress
    		if (event.shiftKey || (event.keyCode < 48 || event.keyCode > 57) && (event.keyCode < 96 || event.keyCode > 105 )) {
    			event.preventDefault();	
    		}	
    	}
    });
});
  </script>
  </head>
  
  
  <body>
  	<div class="login-page-wrapper">
  		<div class="login-info-wrapper">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div></div>
  		</div>
	  	<div class="login-box-wrapper">
	  		<% flash.each do |name, msg| %>
	          <div class="login-error"><%= content_tag :div, msg, :id => "flash_#{name}" %></div>
	        <% end %>
		<h2>Sign in</h2>

		    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<div>
					<%= f.label :phone_no %><br />
                    <%= f.telephone_field :phone_no, :size => 20, :maxlength => 10, :autofocus => true, :id=> "phoneNo" %>
				</div>

				<div>
					<%= f.label :password %><br />
				  	<%= f.password_field :password,:size => 20, :maxlength => 60 %>
				</div>

				<% if devise_mapping.rememberable? -%>
					<div class="remember-me-checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
				<% end -%>

			  	<div class="sign-in-button"><%= f.submit "Sign in" %></div>
			<% end %>

			<%= render "devise/shared/links" %>
	<% end -%>
		</div>
	</div>
