<h1>Listing Regions</h1>
<div class="link-button clearfix"><%= link_to 'Create New Region', new_state_path %></div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2" class="align-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <!-- <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure you want to delete this region?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>


